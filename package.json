{
  "name": "gm-fabric-dashboard",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "~0.16.1",
    "dateformat": "~2.0.0",
    "filesize": "~3.5.6",
    "history": "~4.6.3",
    "jquery": "~3.2.1",
    "jumpstate": "~2.2.2",
    "localforage": "^1.5.0",
    "lodash": "~4.17.4",
    "mathjs": "^3.14.2",
    "ms": "~2.0.0",
    "prop-types": "~15.5.8",
    "randomcolor": "^0.5.3",
    "react": "~15.6.1",
    "react-collapse": "~4.0.2",
    "react-dom": "~15.6.1",
    "react-grid-layout": "^0.14.6",
    "react-input-range": "~1.1.2",
    "react-json-inspector": "~7.0.0",
    "react-motion": "~0.5.0",
    "react-redux": "~5.0.3",
    "react-router": "~4.1.1",
    "react-router-dom": "^4.1.1",
    "react-router-redux": "^5.0.0-alpha.6",
    "react-scripts": "1.0.10",
    "react-sparklines": "~1.6.0",
    "react-transition-group": "^1.2.0",
    "recharts": "~1.0.0-alpha.1",
    "redux": "~3.7.0",
    "redux-logger": "~3.0.0",
    "reselect": "~3.0.0",
    "uikit": "~3.0.0-beta.21"
  },
  "devDependencies": {
    "enzyme": "~2.8.2",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-react": "^7.1.0",
    "jest-cli": "^20.0.4",
    "jest-junit": "^2.1.0",
    "less": "~2.7.2",
    "npm-run-all": "~4.0.2",
    "npm-watch": "~0.1.8",
    "prettier": "^1.5.3",
    "react-addons-test-utils": "~15.6.0",
    "stylelint": "~7.11.1",
    "stylelint-config-standard": "~16.0.0"
  },
  "watch": {
    "build-css": {
      "patterns": [
        "src/style",
        "src/style/components/",
        "src/style/views"
      ],
      "extensions": "less"
    }
  },
  "scripts": {
    "build": "npm run build-css && react-scripts build",
    "build-css": "./node_modules/less/bin/lessc -ru src/style/index.less src/style/index.css",
    "eslint-prettier-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "eject": "react-scripts eject",
    "lint-css": "stylelint 'src/style/**/*.less'",
    "lint-js": "eslint 'src'",
    "precommit": "lint-staged",
    "start": "npm-run-all -p watch start-js",
    "start-js": "react-scripts start",
    "test": "react-scripts test --env=jsdom",
    "watch": "npm-watch"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.less": [
      "stylelint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest-junit": {
    "suiteName": "GM Fabric",
    "output": "./junit/junit.xml",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "proxy": "http://localhost:9990",
  "homepage": "__BASE_URL__"
}
